<%= link_to "new printer", new_admin_edi_printer_path, class: 'pull-right btn btn-sm btn-default'%>
<h2><i class="fa fa-print"></i> Printers</h2>
<table class="table table-striped table-condensed">
	<tr>
		<th>Name</th>
		<th>Address</th>
		<th>Location</th>
		<th class="actions">&nbsp;</th>
	</tr>
	<% @edi_printers.each do | p | %>
	<tr>
		<td><%= p.name %></td>
		<td><code><%= p.hostname %>:<%=p.port %></code></td>
		<td><%= p.location %></td>
		<td class="actions">
			<%= link_to "edit", edit_admin_edi_printer_path(p) %> &nbsp; 
			<%= link_to "delete", 
						  { action: "destroy", id: p.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>


<% content_for :title do %>
	EDI Printers
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">EDI Settings</a></li>
	<li class="active">Printers</li>
<% end %>

